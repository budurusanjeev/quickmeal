<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/app_toolbar_layout" />

    <FrameLayout
        android:id="@+id/ll_myprofile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_myprofilelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_usernameText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.8"
                            android:text="Username"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_medium_textSize" />

                        <TextView
                            android:id="@+id/tv_dots1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:text=":"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_medium_textSize" />

                        <TextView
                            android:id="@+id/tv_username"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="------------------"
                            android:textColor="@color/app_green_color"
                            android:textSize="@dimen/activity_medium_textSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_mobileText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.8"
                            android:text="Mobile"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_medium_textSize" />

                        <TextView
                            android:id="@+id/tv_dots2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:text=":"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_medium_textSize" />

                        <TextView
                            android:id="@+id/tv_mobileNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="------------------"
                            android:textColor="@color/app_green_color"
                            android:textSize="@dimen/activity_medium_textSize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_emailText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.8"
                            android:text="Email ID"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_medium_textSize" />

                        <TextView
                            android:id="@+id/tv_dots3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:text=":"
                            android:textColor="@color/black"
                            android:textSize="@dimen/activity_medium_textSize" />

                        <TextView
                            android:id="@+id/tv_emailId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="------------------"
                            android:textColor="@color/app_green_color"
                            android:textSize="@dimen/activity_medium_textSize" />

                    </LinearLayout>

                </LinearLayout>


                <View
