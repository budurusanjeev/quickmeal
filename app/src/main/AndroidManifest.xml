<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yitsol.quickmeal">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_qm"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.SplashActivity"
            android:label="QuickMeal"
            android:theme="@style/myAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.LoginActivity"
            android:label="Login"
            android:theme="@style/myAppTheme"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".activity.ContactUsActivity"
            android:label="Login"
            android:theme="@style/myAppTheme"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".activity.MyProfileActivity"
            android:label="My Profile"
            android:theme="@style/myAppTheme"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".activity.ChooseAddressActivity"
            android:label="Order Summary"
            android:theme="@style/myAppTheme"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".activity.OrderCompleteActivity"
            android:label="Order Summary"
            android:theme="@style/myAppTheme"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".activity.Dashboard"
            android:label="Dashboard"
            android:theme="@style/myAppTheme"
            android:windowSoftInputMode="stateHidden" />

    </application>
</manifest>